package com.example.simplecalculator;import androidx.appcompat.app.AppCompatActivity;import android.annotation.SuppressLint;import android.os.Bundle;import android.widget.Button;import android.widget.TextView;public class MainActivity extends AppCompatActivity {
@SuppressLint("SetTextI18n")@Overrideprotected void onCreate(Bundle savedInstanceState) {super.onCreate(savedInstanceState);setContentView(R.layout.activity_main); final double[] op1={0};
final double[] op2={0};final TextView edittext1;final boolean[] Add=new boolean[1];Button button_1,button_10,button_dot,button_Rem,button_Add,button_Sub,button_Mul,button_Div,button_clear,button_equals;button_1= findViewById(R.id.b1);button_equals= findViewById(R.id.b18);
edittext1 = findViewById(R.id.t1);button_1.setOnClickListener((v)-> edittext1.setText(edittext1.getText()+"1"));button_Rem.setOnClickListener((v) ->{if(edittext1.getText().length()!=0){op1[0]=Float.parseFloat(edittext1.getText()+""); Rem[0]=true; Dot[0]=false;edittext1.setText(null);}} );
button_equals.setOnClickListener((v)->{if ((Add[0] || Sub[0] || Mul[0] || Div[0] || Rem[0])) {op2[0]=Float.parseFloat( edittext1.getText()+"");}if(Add[0]){edittext1.setText(op1[0]+op2[0]+"");Add[0]=false;}});button_clear.setOnClickListener((v)->{edittext1.setText("");op1[0]=0.0;op2[0]=0.0;});
button_dot.setOnClickListener((v)->{if (Dot[0]){ //does nothing} else{edittext1.setText(edittext1.getText() + ".");Dot[0] = true;}}); }}
